[app]
title = Guess The Number
package.name = guess_number
package.domain = org.example
source.dir = .
version = 0.1
orientation = portrait
fullscreen = 1

# Supported architectures
android.arch = arm64-v8a

# Requirements
requirements = python3,kivy

# Optional: include game.kv
include_exts = py,kv,png,jpg,ttf,wav,mp3

# Android API version
android.api = 34

# Log level
log_level = 2
